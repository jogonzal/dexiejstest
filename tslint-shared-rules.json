{
  "extends": [
    "tslint-react",
    "tslint-eslint-rules"
  ],
  "rulesDirectory": [
    "tslint-microsoft-contrib",
    "tslint-misc-rules"
  ],
  "rules": {
    "no-any": true,
    "typedef": [true, "parameter"],
    "no-var-requires": true,
    "typedef-whitespace":
      [
        true,
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "call-signature": "onespace",
          "index-signature": "onespace",
          "parameter": "onespace",
          "property-declaration": "onespace",
          "variable-declaration": "onespace"
        }
      ],
    "curly": true,
    "ban-types": [true, ["String", "Use string instead"]],
    "no-conditional-assignment": true,
    "prefer-for-of": true,
    "no-console": [true, "log"],
    "no-invalid-this": true,
    "no-shadowed-variable": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "switch-default": true,
    "no-switch-case-fall-through": true,
    "triple-equals": true,
    "indent": [true, "spaces"],
    "no-trailing-whitespace": true,
    "no-angle-bracket-type-assertion": true,
    "quotemark": [true, "single", "avoid-escape"],
    "no-consecutive-blank-lines": [true],
    "semicolon": [true, "never"],
    "whitespace": [true, "check-branch", "check-operator", "check-typecast"],
    "prefer-const": true,
    "no-string-throw": true,
    "array-type": [true, "array"],
    "arrow-return-shorthand": [true],
    "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
    "trailing-comma": [true, {
      "multiline": {
        "objects": "always",
        "arrays": "always"
      }
    }],

    // MSFT-Contrib Rules
    "no-banned-terms": true,
    "no-cookies": true,
    "no-delete-expression": true,
    "no-disable-auto-sanitization": true,
    "no-document-domain": true,
    "no-document-write": true,
    "no-eval": true,
    "no-exec-script": true,
    "function-constructor": true,
    "no-http-string": [true, "http://www.example.com/?.*", "http://www.examples.com/?.*"],
    "no-inner-html": true,
    "no-octal-literal": true,
    "no-string-based-set-immediate": true,
    "no-string-based-set-interval": true,
    "no-string-based-set-timeout": true,
    "non-literal-require": true,
    "possible-timing-attack": true,
    "react-anchor-blank-noopener": true,
    "react-iframe-missing-sandbox": true,
    "react-no-dangerous-html": true,
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    "no-duplicate-parameter-names": true,

    "forin": true,
    "jquery-deferred-must-complete": true,
    "label-position": true,
    "mocha-avoid-only": true,
    "mocha-no-side-effect-code": true,
    "no-arg": true,
    "no-constant-condition": true,
    "no-control-regex": true,
    "no-debugger": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "increment-decrement": true,
    "no-invalid-regexp": true,
    "no-jquery-raw-elements": true,
    "no-regex-spaces": true,
    "no-sparse-arrays": true,
    "unnecessary-bind": true,
    "no-unnecessary-override": true,
    "no-unsafe-finally": true,
    "no-with-statement": true,
    "promise-must-complete": true,
    "radix": true,
    "react-this-binding-issue": false,
    "react-unused-props-and-state": true,
    "use-isnan": true,
    "use-named-parameter": true,

    "arrow-parens": false, // for simple functions the parens on arrow functions are not needed
    "chai-prefer-contains-to-index-of": true,
    "chai-vague-errors": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "export-name": false,
    "function-name": [true, { "static-method-regex": "^[a-z][\\w\\d]+$"}],
    "import-name": true,
    "interface-name": [true, "always-prefix"],
    "jsdoc-format": true,
    "mocha-unneeded-done": true,
    "new-parens": true,
    "no-construct": true,
    "no-parameter-properties": true,
    "no-empty-interface": true,
    "no-for-in": true,
    "no-function-expression": true,
    "no-null-keyword": false, // turn no-null-keyword off and use undefined to mean not initialized and null to mean without a value
    "no-require-imports": true,
    "no-this-assignment": true,
    "no-typeof-undefined": true,
    "no-unnecessary-field-initialization": true,
    "no-unnecessary-local-variable": true,
    "no-unsupported-browser-code": true,
    "object-literal-sort-keys": false, // turn object-literal-sort-keys off and sort keys in a meaningful manner
    "one-variable-per-declaration": [true],
    "prefer-array-literal": true,
    "underscore-consistent-invocation": true,
    "jsx-key": false,

    // /**
    //  * Accessibility. The following rules should be turned on to guarantee the best user
    //  * experience for keyboard and screen reader users.
    //  */
    // "react-a11y-aria-unsupported-elements": true,
    // "react-a11y-event-has-role": true,
    // "react-a11y-image-button-has-alt": true,
    // "react-a11y-img-has-alt": true,
    // "react-a11y-lang": true,
    // "react-a11y-meta": true,
    // "react-a11y-props": true,
    // "react-a11y-proptypes": true,
    // "react-a11y-role": true,
    // "react-a11y-role-has-required-aria-props": true,
    // "react-a11y-role-supports-aria-props": true,
    // "react-a11y-tabindex-no-positive": true,
    // "react-a11y-titles": true,

    /**
     * React/jsx general
     */
    "jsx-alignment": false,
    "jsx-curly-spacing": [true, "always"],
    "jsx-no-lambda": false,
    "jsx-self-close": true,
    "jsx-wrap-multiline": false,
    "jsx-no-braces-for-string-attributes": true,
    "jsx-no-closing-bracket-newline": true,
    "jsx-attribute-spacing": true,
    "jsx-no-bind": true,
    "jsx-no-multiline-js": false,
    /**
     * Arrow functions
     */
     "no-braces-for-single-line-arrow-functions": true,

    /**
     * No default exports
     */
     "no-default-export": true,

     "eofline": true,
     "ordered-imports": true,

     "ter-no-mixed-spaces-and-tabs": true,
     "object-curly-spacing": "always",
     "ter-indent": [true, 2, { "SwitchCase": 1 }],
    //  "linebreak-style": [true, "CRLF"],
     "encoding": true
  }
}
